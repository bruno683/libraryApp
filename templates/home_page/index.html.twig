{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!{% endblock %}

{% block body %}
    
    {% if is_granted('ROLE_REGISTERED') or is_granted('ROLE_EMPLOYEE') %}
        <h1>{{title}}</h1> 
    <div class="container d-inline-flex w-100 row" >
        <div class="col-xs-12 col-md-12 py-2  row d-flex flex-wrap">
            {% for book in books %} 
              <div class="card shadow-lg col-xs-5 col-md-5 m-2 bg-body  d-flex ">
                  <div class="card-image  ">
                  {% for image in book.img %}
                      <img src="{{ asset( '/uploads/' ~ image.name) }}" alt="couverture du livre" width="100" height="133" >
                  {% endfor %}  
                    <div class="card-body d-flex flex-column">
                        <h1 class="card-title ">{{ book.title|lower }}</h1>
                        <p class="card-text">
                            <p>{{book.description | u.truncate(200, '...')}}</p>
                            <strong>{{ book.author }}</strong>
                              <br/>
                              <small><span>{{ book.categorie.name }}</span></small></p>
                    </div> 
                    <div class=" d-inline">
                      <div>
                          {% if book.isavailable %}
                            <p style="color: rgb(13, 17, 226);">Disponible</p>
                          {% else %}
                            <p style="color: brown;">Indisponible</p>
                          {% endif %}
                      </div>
                      <div class=" d-flex justify-content-between">
                          <a href="{{ path('books_show', {'id' : book.id}) }}"><button class="btn btn-success m-2">Voir le livre</button></a> 
                        {% if book.isavailable %}
                          <a href="{{ path('books_rent', {'id' : book.id}) }}"><button class="btn btn-primary m-2">Emprunter le livre</button></a>
                        {% endif %}  
                        {% if not book.isavailable and is_granted('ROLE_EMPLOYEE') %}
                        <a href="{{ path('books_return', {'id' : book.id}) }}"><button class="btn btn-success m-2">rendre le livre disponible</button></a>
                          
                        {% endif %}                       
                      </div>
                    </div>
                  </div>
              </div>
            {% endfor %}
        </div>  
    </div>
    {% else %}
        <div class="container-lg m-auto w-75 h-auto">
            <h1>Bienvenue sur le site de la médiathèque</h1>
            <p>Afin de pouvoir profiter de notre collection dés aujourd'hui, nous vous invitons à créer un compte</p>
            <hr>
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="{{ asset( '/uploads/carrousel/book-g46354ec0c_1280.jpg') }}" class="d-block w-100" alt="photo de livre">
                  </div>
                  <div class="carousel-item">
                    <img src="{{ asset( '/uploads/carrousel/books-g6ee9d1e0d_1280.jpg') }}" class="d-block w-100" alt="phot de bouquins">
                  </div>
                  <div class="carousel-item">
                    <img src=" {{ asset( '/uploads/carrousel/literature-g65ef8240c_1280.jpg')}} " class="d-block w-100" alt="tasse sur livres">
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
        </div>
    {% endif %}
    
{% endblock %}
