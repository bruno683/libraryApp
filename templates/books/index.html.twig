{% extends 'base.html.twig' %}

{% block title %}Books index{% endblock %}

{% block body %}
    <h1>Books index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>IsAvailable</th>
                <th>GetAt</th>
                <th>GetBackAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.description }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.isAvailable ? 'Yes' : 'No' }}</td>
                <td>{{ book.getAt ? book.getAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ book.getBackAt ? book.getBackAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('books_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('books_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('books_new') }}">Create new</a>
{% endblock %}
